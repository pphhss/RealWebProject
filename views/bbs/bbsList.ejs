<script>
  var mMaxPage = 0;
  var mCurPage = 1;
  $(function () {

    $.ajax({
      type: "POST",
      url: "/bbs/JSON/pages",
      success: function (_page) {
        var mMaxPage = parseInt(_page);

        loadBbButton();
      }
    });

    loadBbList(1);

  });

